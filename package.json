{
    "name": "vestibule-lambda",
    "description": "Build lambda components",
    "version": "1.0.0",
    "scripts": {
        "build:layers": "cd ./layers && npm run build",
        "build:functions": "cd ./functions && npm run build",
        "install:functions": "cd ./functions && npm install",
        "build:mocks": "cd ./mocks && npm install",
        "build": "npm run build:mocks && npm run build:layers && npm run build:functions",
        "clean:layers": "cd ./layers && npm run clean",
        "clean:functions": "cd ./functions && npm run clean",
        "clean:mocks": "cd ./mocks && npm run clean",
        "clean": "npm run clean:mocks && npm run clean:layers && npm run clean:functions"
    }
}
